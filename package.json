{
  "name": "advanced-issue-labeler",
  "version": "1.0.0",
  "description": "Label GitHub issues based on input",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn && yarn run build && yarn run format && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/advanced-issue-labeler.git"
  },
  "keywords": [
    "actions",
    "node",
    "issues",
    "labels"
  ],
  "author": "jamacku@redhat.com",
  "license": "MIT",
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/core": "^7.0.2",
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/rest": "^22.0.0",
    "@probot/octokit-plugin-config": "^3.0.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^3.2.3",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
