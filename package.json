{
  "name": "advanced-issue-labeler",
  "version": "1.0.0",
  "description": "Label GitHub issues based on input",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn && yarn run build && yarn run format && yarn run lint && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/advanced-issue-labeler.git"
  },
  "keywords": [
    "actions",
    "node",
    "issues",
    "labels"
  ],
  "author": "jamacku@redhat.com",
  "license": "MIT",
  "packageManager": "yarn@3.6.4",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/core": "^5.0.1",
    "@octokit/rest": "20.0.2",
    "@probot/octokit-plugin-config": "^2.0.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "@vercel/ncc": "0.38.1",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "5.0.1",
    "js-yaml": "4.1.0",
    "prettier": "3.0.3",
    "ts-node": "10.9.2",
    "typescript": "5.2.2",
    "vitest": "1.4.0"
  }
}
